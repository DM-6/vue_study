$blue = #3190e8
$bc = #e4e4e4
$fc = #fff

// 任何一个盒子可能要利用的CSS
wh($width, $height)
    width $width
    height $height

sc($fz, $c)
    font-size $fz
    color $c

ct()
    position absolute
    top 50%
    transform translateY(-50%)

fj($type=space-between)   // 弹性布局 
    display flex
    justify-content $type

center()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)